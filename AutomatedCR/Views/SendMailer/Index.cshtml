<div class="main-content" style="padding-top:0px;">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong>Send</strong> Mail
                        </div>
                        <div class="card-body card-block">
                            @*<h2>Hi</h2>*@
                            <div class="col-md-3 col-sm-12 col-xs-12 form-group" style="float:left;">
                                <label for="ddlTeacher" class="col-sm-6-custom control-label"><strong>Teacher</strong></label>
                                <select id="ddlTeacher" style="width:100%;">
                                    <option value="">
                                                    
                                    </option>
                                    <option value='yogesh'>Yogesh Singh</option>
                                    <option value='sonarika'>Sonarika Bhadoria</option>
                                    <option value='anil'>Anil Singh</option>
                                    <option value='akilesh'>Akilesh Sahu</option>
                                </select>
                            </div>
                            <div class="col-md-3 col-sm-12 col-xs-12 form-group" style="float:left;">
                                <label for="ddlCourse" class="col-sm-6-custom control-label"><strong>Course</strong></label>
                                <select id="ddlCourse" style="width:100%">
                                    <option value=""></option>
                                    <option value='yogesh'>Yogesh Singh</option>
                                    <option value='sonarika'>Sonarika Bhadoria</option>
                                    <option value='anil'>Anil Singh</option>
                                    <option value='akilesh'>Akilesh Sahu</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="card-body card-block">
                            @using (Html.BeginForm("Index", "SendMailer", FormMethod.Post, new { @id = "form1", @enctype = "multipart/form-data", @class = "form-horizontal" }))
                            {
                                @Html.ValidationSummary()
                                <table>
                                    <tbody>
                                    <tr>
                                        <td>To:</td>
                                        <td>@Html.TextBoxFor(m => m.To, new { @class = "form-control form-control-lg  ", @placeholder = "Receiver" })</td>
                                    </tr>
                                    <tr>
                                        <td>Subject:</td>
                                        <td>@Html.TextBoxFor(m => m.Subject, new { @class = "form-control form-control-lg  ", @placeholder = "Subject" })</td>
                                    </tr>
                                    <tr>
                                        <td>Attachment</td>
                                        <td><input name="fileUploader" type="file" class="btn btn-default" /></td>
                                    </tr>
                                    <tr>
                                        <td>Body:</td>
                                        <td>@Html.TextAreaFor(m => m.Body, new { @class = "form-control form-control-lg  ", @placeholder = "Body" })</td>
                                    </tr>
                                    </tbody>
                                </table>
                                <input type="submit" value="Send" class="btn btn-success" />
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="copyright">
                        <p>Developed By <strong>Zaber</strong></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

